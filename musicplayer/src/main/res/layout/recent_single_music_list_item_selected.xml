<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:background="#F6F2F2"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/singer_head"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/file_name"
            android:textStyle="bold" android:textColor="#2196F3" app:layout_constraintStart_toEndOf="@+id/singer_head"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" android:textSize="16sp"/>
    <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp" app:srcCompat="@drawable/mv_unlike" android:id="@+id/imageView11"
            app:layout_constraintStart_toEndOf="@+id/singer_head" app:layout_constraintTop_toBottomOf="@+id/file_name"
            android:layout_marginTop="10dp" android:layout_marginStart="10dp"/>
    <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp" app:srcCompat="@drawable/mv_share" android:id="@+id/imageView12"
            app:layout_constraintStart_toEndOf="@+id/imageView11"
            android:layout_marginStart="20dp" app:layout_constraintTop_toBottomOf="@+id/file_name"
            android:layout_marginTop="10dp"/>
    <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp" app:srcCompat="@drawable/more"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageView13"
            app:layout_constraintTop_toBottomOf="@+id/file_name" android:layout_marginTop="5dp"/>
    <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp" app:srcCompat="@drawable/comment" android:id="@+id/imageView14"
            app:layout_constraintStart_toEndOf="@+id/imageView12" app:layout_constraintTop_toBottomOf="@+id/file_name"
            android:layout_marginTop="10dp" android:layout_marginStart="20dp"/>
    <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp" app:srcCompat="@drawable/recent_mv"
            android:id="@+id/imageView15"
            app:layout_constraintStart_toEndOf="@+id/imageView14"
            android:layout_marginStart="20dp" app:layout_constraintTop_toBottomOf="@+id/file_name"
            android:layout_marginTop="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>