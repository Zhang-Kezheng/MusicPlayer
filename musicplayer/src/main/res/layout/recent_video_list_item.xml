<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="140dp"
            android:layout_height="70dp" app:srcCompat="@drawable/add_move" android:id="@+id/recent_video_list_item_image"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp" android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/recent_video_list_item_videoName"
            app:layout_constraintStart_toEndOf="@+id/recent_video_list_item_image" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp" android:layout_marginStart="10dp" android:textStyle="bold"
            android:textColor="#0B0A0A" android:textSize="16sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/recent_video_list_item_time"
            app:layout_constraintStart_toEndOf="@+id/recent_video_list_item_image" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/recent_video_list_item_videoName" android:layout_marginStart="10dp"
            android:textSize="12sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/recent_video_list_item_singerName"
            app:layout_constraintStart_toEndOf="@+id/recent_video_list_item_time" android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/recent_video_list_item_videoName" android:layout_marginTop="10dp"
            android:textSize="12sp"/>
    <ImageView
            android:layout_width="5dp"
            android:layout_height="20dp" app:srcCompat="@drawable/more" android:id="@+id/imageView16"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" app:layout_constraintBottom_toBottomOf="@+id/recent_video_list_item_time"
            android:layout_marginBottom="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>