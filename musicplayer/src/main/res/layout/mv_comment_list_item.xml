<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" app:srcCompat="@drawable/lrc" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:id="@+id/mv_comment_user_img"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:id="@+id/mv_comment_user_name"
            app:layout_constraintStart_toEndOf="@+id/mv_comment_user_img"/>
    <TextView
            android:text="TextView"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/mv_comment_update_date"
            app:layout_constraintStart_toEndOf="@+id/mv_comment_user_img" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/mv_comment_user_name" tools:ignore="SmallSp"/>
    <TextView
            android:text="TextView"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/mv_comment_content"
            app:layout_constraintTop_toBottomOf="@+id/mv_comment_update_date"
            app:layout_constraintStart_toStartOf="@+id/mv_comment_update_date"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toStartOf="@+id/mv_comment_greate_img"/>
    <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp" app:srcCompat="@drawable/mv_ungreat"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:id="@+id/mv_comment_greate_img"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>