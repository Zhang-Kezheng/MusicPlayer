<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:layout_height="wrap_content">
    <ImageView android:layout_width="115dp" android:layout_height="115dp"
               android:id="@+id/notification_bg"
               android:src="@drawable/playbg"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginStart="10dp"
                  android:id="@+id/notification_songName"
                  android:text="歌名"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/notification_singerName"
                  android:layout_marginStart="10dp"
                  android:text="歌手"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:gravity="center_vertical">
            <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/notification_pre"
                    android:layout_height="20dp" android:src="@drawable/notification_pre"
                    android:layout_weight="1"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="20dp"
                       android:layout_weight="1"
                       android:id="@+id/notification_pause"
                       android:src="@drawable/play"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/notification_next"
                    android:layout_height="20dp" android:src="@drawable/next"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>