<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@drawable/dialog_back"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="20dp"
                  android:contentDescription="歌词字体"
                  android:orientation="horizontal">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/typeface_item_back_zero"
                      android:orientation="horizontal"
                      android:background="@drawable/typeface_item_background"
                      android:layout_marginHorizontal="15dp"
                      android:gravity="center_horizontal">
            <androidx.cardview.widget.CardView android:layout_width="50dp" android:layout_height="50dp"
                                               app:cardCornerRadius="5dp"
                                               android:layout_margin="2dp"
                                               android:id="@+id/lrc_family_zero"
                                               app:cardBackgroundColor="@color/cardview_dark_background"
                                               tools:ignore="PrivateResource">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="手机默认"
                          android:id="@+id/lrc_family_zero_text"
                          android:layout_gravity="center"
                          android:textSize="10sp"
                          android:textColor="#FFFFFF" tools:ignore="SmallSp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginHorizontal="15dp"
                      android:gravity="center_horizontal" android:id="@+id/typeface_item_back_one">
            <androidx.cardview.widget.CardView android:layout_width="50dp" android:layout_height="50dp"
                                               app:cardCornerRadius="5dp"
                                               android:layout_margin="2dp"
                                               android:id="@+id/lrc_family_one"
                                               app:cardBackgroundColor="@color/cardview_dark_background"
                                               tools:ignore="PrivateResource">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="站酷文艺体"
                          android:id="@+id/lrc_family_one_text"
                          android:layout_gravity="center"
                          android:textSize="10sp"
                          android:textColor="#FFFFFF" tools:ignore="SmallSp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginHorizontal="15dp"
                      android:gravity="center_horizontal" android:id="@+id/typeface_item_back_two">
            <androidx.cardview.widget.CardView android:layout_width="50dp" android:layout_height="50dp"
                                               app:cardCornerRadius="5dp"
                                               android:id="@+id/lrc_family_two"
                                               android:layout_margin="2dp"
                                               app:cardBackgroundColor="@color/cardview_dark_background"
                                               tools:ignore="PrivateResource">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="优设标题黑"
                          android:id="@+id/lrc_family_two_text"
                          android:layout_gravity="center"
                          android:textSize="10sp"
                          android:textColor="#FFFFFF" tools:ignore="SmallSp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:gravity="center_horizontal"
                      android:layout_marginHorizontal="15dp" android:id="@+id/typeface_item_back_three">
            <androidx.cardview.widget.CardView android:layout_width="50dp" android:layout_height="50dp"
                                               app:cardCornerRadius="5dp"
                                               android:layout_margin="2dp"
                                               android:id="@+id/lrc_family_three"
                                               app:cardBackgroundColor="@color/cardview_dark_background"
                                               tools:ignore="PrivateResource">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="华康少女体"
                          android:id="@+id/lrc_family_three_text"
                          android:layout_gravity="center"
                          android:textSize="10sp"
                          android:textColor="#FFFFFF" tools:ignore="SmallSp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginHorizontal="15dp"
                      android:gravity="center_horizontal" android:id="@+id/typeface_item_back_four">
            <androidx.cardview.widget.CardView android:layout_width="50dp" android:layout_height="50dp"
                                               app:cardCornerRadius="5dp"
                                               android:layout_margin="2dp"
                                               app:cardBackgroundColor="@color/cardview_dark_background"
                                               tools:ignore="PrivateResource"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="30dp"
                  android:orientation="horizontal">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginStart="20dp"
              android:text="大小"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginStart="20dp"
                  android:text="T-"/>
        <SeekBar android:layout_width="0dp" android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical"
                 android:layout_weight="1" android:id="@+id/lrc_set_lrc_size"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:text="T+"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="30dp"
                  android:id="@+id/lrc_color_list"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginStart="20dp"
                  android:text="颜色"/>
        <FrameLayout android:layout_width="0dp" android:layout_height="match_parent"
                     android:layout_marginStart="20dp"
                     android:id="@+id/lrc_color_red_container"
                     android:layout_weight="1">
            <View android:layout_width="match_parent" android:layout_height="match_parent"
                       android:id="@+id/lrc_color_red"
                    android:background="@drawable/circle_corner_red"/>
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="match_parent"
                     android:layout_marginStart="20dp"
                     android:id="@+id/lrc_color_green_container"
                     android:layout_weight="1">
            <View android:layout_width="match_parent" android:layout_height="match_parent"
                       android:id="@+id/lrc_color_green"
                       android:background="@drawable/circle_corner_green"/>
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="match_parent"
                     android:layout_marginStart="20dp"
                     android:id="@+id/lrc_color_blue_container"
                     android:layout_weight="1">
            <View android:layout_width="match_parent" android:layout_height="match_parent"
                       android:id="@+id/lrc_color_blue"
                       android:background="@drawable/circle_corner_blue"/>
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="match_parent"
                     android:layout_marginStart="20dp"
                     android:id="@+id/lrc_color_yellow_container"
                     android:layout_weight="1">
            <View android:layout_width="match_parent" android:layout_height="match_parent"
                       android:id="@+id/lrc_color_yellow"
                       android:background="@drawable/circle_corner_yellow"/>
        </FrameLayout>
        <FrameLayout android:layout_width="0dp" android:layout_height="match_parent"
                     android:layout_marginStart="20dp"
                     android:layout_marginEnd="20dp"
                     android:id="@+id/lrc_color_purple_container"
                     android:layout_weight="1">
            <View android:layout_width="match_parent" android:layout_height="match_parent"
                       android:id="@+id/lrc_color_purple"
                       android:background="@drawable/circle_corner_purple"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
